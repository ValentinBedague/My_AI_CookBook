<div class="container p-4">
  <div class="d-flex justify-content-end">
     <%= link_to user_path(current_user) do %>
      <i class='fa-solid fa-xmark rounded-white'></i>
    <% end %>
  </div>
  <h1>Edit my profile</h1>
  <div class="d-flex justify-content-center">
    <%= content_tag :div, user_avatar(current_user, :large), class: "align-self-center mt-4" %>
  </div>
  <%= simple_form_for @user do |f| %>
    <div class="form-inputs mt-5">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label_html: { class: "ms-3" },
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label_html: { class: "ms-3" },
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions row justify-content-center mt-5">
      <%= f.button :submit, "Save my profile", class: "btn-plain mb-3" %>
    </div>
  <% end %>

  <h1 class="my-5">Edit my personal diet</h1>
  <%= simple_form_for @user do |f| %>
      <%= f.association :restrictions,
                        as: :check_boxes,
                        item_wrapper_class: "form-control mb-3 d-flex justify-content-center",
                        input_html: { class: "restriction-checkbox" }
      %>
      <div class="d-flex justify-content-center">
        <%= f.submit 'Save my personal diet', class: "btn btn-plain d-flex align-self-center" %>
      </div>
  <% end %>
</div>
