<div class="container p-4">
  <div class="card-body">

    <h1 class= "mb-4"><i class='fa-solid fa-wand-magic-sparkles me-3'></i><span>Perfect drink pairings</span></h1>

    <div class="recipe-card-link">
      <div class="recipe-card-link recipe-card" style="background-image: url('<%= @recipe.url_image %>');">
      </div>
    </div>

    <h2 class= "my-4">Alcoholic</h2>
    <% @pairings["alcoholic"].each do |d| %>
      <div class="card component-container p-3 mb-3 rounded-4">
        <div class="d-flex justify-content-between py-1">
          <div><strong><%= d["title"] %></strong></div>
          <div style="font-size: 12px;"><%= d["style"].capitalize %></div>
        </div>
        <%= d["comment"] %>
      </div>
    <% end %>

    <h2 class= "my-4">Zero-proof</h2>
    <% @pairings["non_alcoholic"].each do |d| %>
      <div class="card component-container p-3 mb-3 rounded-4">
        <div class="d-flex justify-content-between py-1">
          <div><strong><%= d["title"] %></strong></div>
          <div style="font-size: 12px;"><%= d["style"].capitalize %></div>
        </div>
        <%= d["comment"] %>
      </div>
    <% end %>

    <div class="container mt-2">
      <div class="d-flex flex-wrap justify-content-center align-items-center">
        <%= link_to "Close", ask_ai_recipe_path(@recipe), class:"btn btn-outline mt-3 me-3" %>
      </div>

  </div>
  </div>
</div>
