<div class="container p-4" data-controller="url-upload">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <div></div>
      <%# link_to "<i class='rounded-white fas fa-arrow-left'></i>".html_safe, :back %>
      <%= link_to "<i class='fas fa-xmark rounded-white'></i>".html_safe, root_path %>
    </div>
    <h1 class="mb-4">Import a recipe from the Web</h1>
          <%= simple_form_for :url_form, url: create_via_url_recipes_path, method: :post, data: { action: "submit->url-upload#onFormSubmit" } do |f| %>
            <div class="input-with-icon">
              <i class="fa-solid fa-link input-icon"></i>
              <%= f.input :url,
                name: "recipe_url",
                placeholder: "Paste your recipeâ€™s page link",
                input_html: { class: "custom-input", data: { action: "input->url-upload#toggleButton", url_upload_target: "input"} },
                label: false
                %>
            </div>
            <div class="fixed-bottom-button">
              <%= button_tag(type: "submit", class: "btn-plain", data: { url_upload_target: "submit" }, disabled: true) do %>
                <i class="fa-solid fa-wand-magic-sparkles btn-icon"></i>
                 Import recipe
              <% end %>
            </div>
          <% end %>

         <div id="loading-modal" class="d-none">
          <div class="modal-backdrop blur-backdrop"></div>
          <div class="modal show d-block" tabindex="-1" role="status" aria-modal="true" style="z-index: 1051;">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content text-center p-4 rounded-4">
                <div class="modal-text d-flex align-items-center justify-content-center">
                  Analyzing your URL...
                  <span class="spinner-border spinner-border-sm ms-2" role="status" aria-hidden="true"></span>
                </div>
                <div class="d-flex flex-column align-items-center justify-content-center m-4">
                  <%= render "shared/svg/lady" %>
                </div>
              </div>
            </div>
          </div>
        </div>

    </div>
  </div>
</div>
