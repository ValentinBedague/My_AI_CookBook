<div id="collection_form_container">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <div></div>
      <!-- <i class='rounded-white fas fa-arrow-left'></i> -->
      <i class="fas fa-xmark rounded-white"></i>
    </div>
    <h1 class= "my-4"><%= @collection.name || "Create a new collection" %></h1>
    <div class="steps steps-small mb-5">
      <span class="circle done"></span>
      <span class="circle done"></span>
      <div class="progress-bar">
        <span class="indicator indicator-4"></span>
      </div>
    </div>
    <h2 class="mb-4">Cover image</h2>
</div>

<div class="modal-backdrop blur-backdrop"></div>

<div class="modal show d-block" tabindex="-1" role="dialog" aria-modal="true" style="z-index: 1051;">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center p-4 rounded-4">
      <div class="modal-text">
        Your new book has been created!
      </div>
      <div class="d-flex flex-column align-items-center justify-content-center mt-4">
        <%= image_tag "https://res.cloudinary.com/dhv4phhqr/image/upload/v1750146719/cooking-pot_fzr5ze.png" %>
        <%= link_to "Go to books", collections_path, class: "btn-plain mt-4", style: "text-decoration: none;" %>
      </div>
    </div>
  </div>
</div>
