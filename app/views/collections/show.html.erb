  <div class="container p-4">
    <div class="d-flex justify-content-between align-items-center mb-2">

      <%= link_to "<i class='rounded-white fas fa-arrow-left'></i>".html_safe, :back %>

      <div>
        <i class="far fa-heart me-2 rounded-white"></i>

        <%= link_to "<i class='fas fa-ellipsis-v rounded-white dots'></i>".html_safe %>

      </div>
    </div>
    <div>
     <h1><%=@collection.name %></h1>
      <%= link_to "❌delete book", collection_path(@collection), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-danger fw-bold small" %>
      <%= link_to "🍽️add a recipe to the book", new_collection_tag_path(@collection), class: "text-primary fw-bold small" %>
    </div>
    <%= link_to "↩️ back", collections_path, class: 'btn btn-ghost  btn-sm' %>
    <% @collection.recipes.each do |recipe| %>
      <% tag = @tags.find{ |t| t.recipe_id == recipe.id} %>
    <div>
      <%= link_to recipe.name,recipe_path(recipe) %>
      <%= link_to "delete", tag_path(tag), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-danger fw-bold small" %>
    </div>
    <% end %>

    </div>

  </div>
<!-- Bottom navbar -->
<%= render "shared/bottom_navbar" %>
