<div class="container p-4 d-flex justify-content-center flex-column">

  <%= link_to home_path do %>
    <div class="d-flex justify-content-center">
      <%= image_tag "https://res.cloudinary.com/dhv4phhqr/image/upload/v1749654034/myaicookbook_tr1h3a.svg", alt: "logo", style: "height:300px; width: 450px; margin-top:-50px;"%>
    </div>
  <% end %>
  <%= image_tag "https://res.cloudinary.com/dhv4phhqr/image/upload/v1749809545/Chars_hsml9u.png", alt: "cook" %>



  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mt-5">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label_html: { class: "ms-3" },
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label_html: { class: "ms-3" },
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions row justify-content-center mt-5">
      <%= f.button :submit, "Sign in", class: "btn-plain mb-3" %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline" %><br />
      <% end %>
    </div>
  <% end %>

</div>
