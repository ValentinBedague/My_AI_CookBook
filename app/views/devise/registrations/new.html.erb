<div class="container p-4">
  <div class="d-flex justify-content-end">
    <%= link_to home_path do %>
      <i class='rounded-white-cross fa-solid fa-xmark fw-bold'></i>
    <% end %>
  </div>

  <h1 class="mt-4">Create your profile</h1>

  <div class="mt-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label_html: { class: "ms-3" },
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    hint_html: { class: "ms-3" },
                    label_html: { class: "ms-3" },
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label_html: { class: "ms-3" },
                    input_html: { autocomplete: "new-password" } %>

        <%= f.input :photo,
                    as: :file,
                    label: "Photo de profil (optionnel)",
                    hint: "Formats accecptÃ©s: JPEG, PNG, GIF (max 5MB)",
                    hint_html: { class: "ms-3" },
                    label_html: { class: "ms-3" },
                    input_html: { accept: "image/*" } %>
      </div>



      <div class="form-actions d-flex justify-content-center">
        <%= f.button :submit, "Create my profile", class: "btn btn-plain fixed-bottom-button" %>
      </div>
    <% end %>
  </div>
</div>
